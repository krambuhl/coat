{!import heading './heading.coat'}

<div class="card {class}">
  {@card-header}
    <header class="card-header">
      <heading level="3">{>yield}</heading>
    </header>
  {/card-header}

  {@card-body}
    <div class="card-body">
      {>yield}
    </div>
  {/card-body}

  {@card-footer}
    <footer class="card-footer">
      {>yield}
    </footer>
  {/card-footer}
</div>